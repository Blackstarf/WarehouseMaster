<Window x:Class="WarehouseMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseMaster"
        Title="Добро пожаловать" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#FFF0F0F0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Добро пожаловать в WarehouseMaster"
                       FontSize="18"
                       FontWeight="Bold"
                       TextAlignment="Center"/>

            <Button Content="🔐 Войти"
                    Width="200" Height="40"
                    Click="LoginButton_Click"
                    Background="#FF2C3E50" Foreground="White"/>

            <Button Content="📝 Зарегистрироваться"
                    Width="200" Height="40"
                    Click="RegisterButton_Click"
                    Background="#FF34495E" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
